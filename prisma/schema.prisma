datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String    @unique
  password      String
  role          Role      @default(USER)
  emailVerified DateTime? // Pour stocker la date de vérification
  verifyToken   String?   // Token de vérification
  verifyTokenExpiry DateTime? // Date d'expiration du token
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

enum Role {
  USER
  ADMIN
}